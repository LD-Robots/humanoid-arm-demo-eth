<?xml version="1.0"?>
<robot xmlns:xacro="http://www.ros.org/wiki/xacro" name="x6_test">
  <xacro:arg name="pkg_share" default=""/>

  <!-- Two motor setup -->
  <link name="world"/>

  <!-- Motor 0 (slave position 0) -->
  <link name="motor0_link">
    <visual>
      <geometry>
        <cylinder radius="0.05" length="0.1"/>
      </geometry>
      <origin xyz="0 0 0" rpy="0 0 0"/>
    </visual>
  </link>

  <joint name="motor0_joint" type="revolute">
    <parent link="world"/>
    <child link="motor0_link"/>
    <origin xyz="0 0.15 0" rpy="0 0 0"/>
    <axis xyz="0 0 1"/>
    <!-- Hard safety limits: ±90° nominal, ±95° absolute for recovery -->
    <limit lower="-1.658" upper="1.658" velocity="16.0" effort="3.0"/>
  </joint>

  <!-- Motor 1 (slave position 1) -->
  <link name="motor1_link">
    <visual>
      <geometry>
        <cylinder radius="0.05" length="0.1"/>
      </geometry>
      <origin xyz="0 0 0" rpy="0 0 0"/>
    </visual>
  </link>

  <joint name="motor1_joint" type="revolute">
    <parent link="world"/>
    <child link="motor1_link"/>
    <origin xyz="0 -0.15 0" rpy="0 0 0"/>
    <axis xyz="0 0 1"/>
    <!-- Hard safety limits: ±90° nominal, ±95° absolute for recovery -->
    <limit lower="-1.658" upper="1.658" velocity="16.0" effort="3.0"/>
  </joint>

  <!-- ros2_control configuration -->
  <ros2_control name="EthercatSystem" type="system">
    <hardware>
      <plugin>ethercat_driver/EthercatDriver</plugin>
      <param name="master_id">0</param>
      <param name="control_frequency">100</param>
    </hardware>

    <!-- Motor 0 - EtherCAT slave position 0 (new motor, first in chain) -->
    <joint name="motor0_joint">
      <command_interface name="velocity"/>
      <command_interface name="position"/>
      <command_interface name="effort"/>
      <state_interface name="position"/>
      <state_interface name="velocity"/>
      <state_interface name="effort"/>
      <ec_module name="MyActuatorX6_0">
        <plugin>ethercat_generic_plugins/EcCiA402Drive</plugin>
        <param name="alias">0</param>
        <param name="position">0</param>
        <param name="slave_config">$(arg pkg_share)/config/myactuator_x6.yaml</param>
        <param name="mode_of_operation">8</param>  <!-- CSP mode for position control -->
      </ec_module>
    </joint>

    <!-- Motor 1 - EtherCAT slave position 1 (original working motor, second in chain) -->
    <joint name="motor1_joint">
      <command_interface name="velocity"/>
      <command_interface name="position"/>
      <command_interface name="effort"/>
      <state_interface name="position"/>
      <state_interface name="velocity"/>
      <state_interface name="effort"/>
      <ec_module name="MyActuatorX6_1">
        <plugin>ethercat_generic_plugins/EcCiA402Drive</plugin>
        <param name="alias">0</param>
        <param name="position">1</param>
        <param name="slave_config">$(arg pkg_share)/config/myactuator_x6.yaml</param>
        <param name="mode_of_operation">8</param>  <!-- CSP mode for position control -->
      </ec_module>
    </joint>
  </ros2_control>

</robot>
