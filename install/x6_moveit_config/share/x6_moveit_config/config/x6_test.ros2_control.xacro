<?xml version="1.0"?>
<robot xmlns:xacro="http://www.ros.org/wiki/xacro">
    <xacro:macro name="x6_test_ros2_control" params="name initial_positions_file">
        <xacro:property name="initial_positions" value="${xacro.load_yaml(initial_positions_file)['initial_positions']}"/>
        <xacro:arg name="pkg_share" default=""/>

        <ros2_control name="${name}" type="system">
            <hardware>
                <!-- EtherCAT Driver for real MyActuator X6 hardware -->
                <plugin>ethercat_driver/EthercatDriver</plugin>
                <param name="master_id">0</param>
                <param name="control_frequency">100</param>
            </hardware>
            <joint name="motor_joint">
                <command_interface name="position"/>
                <command_interface name="velocity"/>
                <command_interface name="effort"/>
                <state_interface name="position">
                  <param name="initial_value">${initial_positions['motor_joint']}</param>
                </state_interface>
                <state_interface name="velocity"/>
                <state_interface name="effort"/>
                <ec_module name="MyActuatorX6">
                    <plugin>ethercat_generic_plugins/EcCiA402Drive</plugin>
                    <param name="alias">0</param>
                    <param name="position">0</param>
                    <param name="slave_config">$(arg pkg_share)/config/myactuator_x6.yaml</param>
                    <param name="mode_of_operation">8</param>  <!-- CSP mode for position control -->
                </ec_module>
            </joint>

        </ros2_control>
    </xacro:macro>
</robot>
