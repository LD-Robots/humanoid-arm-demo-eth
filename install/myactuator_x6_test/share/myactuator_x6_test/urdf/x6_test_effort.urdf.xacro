<?xml version="1.0"?>
<robot xmlns:xacro="http://www.ros.org/wiki/xacro" name="x6_test">
  <xacro:arg name="pkg_share" default=""/>

  <!-- Two joint robot for effort/torque control testing -->
  <link name="world"/>

  <!-- Motor 1 -->
  <link name="motor_link">
    <visual>
      <geometry>
        <cylinder radius="0.05" length="0.1"/>
      </geometry>
    </visual>
  </link>

  <joint name="motor_joint" type="revolute">
    <parent link="world"/>
    <child link="motor_link"/>
    <axis xyz="0 0 1"/>
    <limit lower="-1.5708" upper="1.5708" velocity="16.0" effort="3.0"/>
  </joint>

  <!-- Motor 2 (DISABLED FOR TESTING)
  <link name="motor_2_link">
    <visual>
      <geometry>
        <cylinder radius="0.05" length="0.1"/>
      </geometry>
    </visual>
  </link>

  <joint name="motor_2_joint" type="revolute">
    <parent link="motor_link"/>
    <child link="motor_2_link"/>
    <origin xyz="0.2 0 0"/>
    <axis xyz="0 0 1"/>
    <limit lower="-1.5708" upper="1.5708" velocity="16.0" effort="3.0"/>
  </joint>
  -->

  <!-- ros2_control configuration - CST (Torque) mode -->
  <ros2_control name="EthercatSystem" type="system">
    <hardware>
      <plugin>ethercat_driver/EthercatDriver</plugin>
      <param name="master_id">0</param>
      <param name="control_frequency">100</param>
    </hardware>

    <!-- Motor 1 Joint -->
    <joint name="motor_joint">
      <command_interface name="velocity"/>
      <command_interface name="position"/>
      <command_interface name="effort"/>
      <state_interface name="position"/>
      <state_interface name="velocity"/>
      <state_interface name="effort"/>
      <ec_module name="MyActuatorX6_1">
        <plugin>ethercat_generic_plugins/EcCiA402Drive</plugin>
        <param name="alias">0</param>
        <param name="position">0</param>
        <param name="slave_config">$(arg pkg_share)/config/myactuator_x6.yaml</param>
        <param name="mode_of_operation">10</param>
      </ec_module>
    </joint>

    <!-- Motor 2 Joint (DISABLED FOR TESTING)
    <joint name="motor_2_joint">
      <command_interface name="velocity"/>
      <command_interface name="position"/>
      <command_interface name="effort"/>
      <state_interface name="position"/>
      <state_interface name="velocity"/>
      <state_interface name="effort"/>
      <ec_module name="MyActuatorX6_2">
        <plugin>ethercat_generic_plugins/EcCiA402Drive</plugin>
        <param name="alias">0</param>
        <param name="position">1</param>
        <param name="slave_config">$(arg pkg_share)/config/myactuator_x6.yaml</param>
        <param name="mode_of_operation">10</param>
      </ec_module>
    </joint>
    -->
  </ros2_control>

</robot>
